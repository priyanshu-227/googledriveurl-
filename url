<body>
    <div class="container">
        <h1>ðŸ”— Google Drive QR Generator</h1>
        
        <div class="error-message" id="error-message"></div>
        <div class="success-message" id="success-message"></div>
        
        <div class="input-group">
            <label for="drive-url">Google Drive URL:</label>
            <input type="text" id="drive-url" placeholder="Paste your Google Drive URL here..." />
        </div>
        
        <button class="generate-btn" onclick="generateQR()">
            âœ¨ Generate QR Code
        </button>
        
        <div class="qr-container" id="qr-container">
            <div id="qrcode"></div>
            <button class="download-btn" onclick="downloadQR()">
                ðŸ’¾ Download QR Code
            </button>
        </div>
    </div>

    <script>
        let currentQRDataURL = null;
        
        // Validate Google Drive URL
        function isValidGoogleDriveUrl(url) {
            const patterns = [
                /^https:\/\/drive\.google\.com\/file\/d\/([a-zA-Z0-9-_]+)/,
                /^https:\/\/drive\.google\.com\/open\?id=([a-zA-Z0-9-_]+)/,
                /^https:\/\/docs\.google\.com\/document\/d\/([a-zA-Z0-9-_]+)/,
                /^https:\/\/docs\.google\.com\/spreadsheets\/d\/([a-zA-Z0-9-_]+)/,
                /^https:\/\/docs\.google\.com\/presentation\/d\/([a-zA-Z0-9-_]+)/,
                /^https:\/\/drive\.google\.com\/drive\/folders\/([a-zA-Z0-9-_]+)/
            ];
            
            return patterns.some(pattern => pattern.test(url));
        }

        // Convert Google Drive URL to direct access format
        function convertToDirectUrl(url) {
            // Extract file ID from various Google Drive URL formats
            let fileId = null;
            
            const fileMatch = url.match(/\/file\/d\/([a-zA-Z0-9-_]+)/);
            if (fileMatch) {
                fileId = fileMatch[1];
                return `https://drive.google.com/file/d/${fileId}/view?usp=sharing`;
            }
            
            const openMatch = url.match(/[?&]id=([a-zA-Z0-9-_]+)/);
            if (openMatch) {
                fileId = openMatch[1];
                return `https://drive.google.com/file/d/${fileId}/view?usp=sharing`;
            }
            
            // For documents, spreadsheets, presentations, and folders, return as-is
            return url;
        }

        // Show message functions
        function showError(message) {
            const errorDiv = document.getElementById('error-message');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            document.getElementById('success-message').style.display = 'none';
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('success-message');
            successDiv.textContent = message;
            successDiv.style.display = 'block';
            document.getElementById('error-message').style.display = 'none';
        }

        function hideMessages() {
            document.getElementById('error-message').style.display = 'none';
            document.getElementById('success-message').style.display = 'none';
        }

        // Generate QR Code
        function generateQR() {
            const url = document.getElementById('drive-url').value.trim();
            
            hideMessages();
            
            if (!url) {
                showError('Please enter a Google Drive URL');
                return;
            }
            
            if (!isValidGoogleDriveUrl(url)) {
                showError('Please enter a valid Google Drive URL');
                return;
            }
            
            try {
                const processedUrl = convertToDirectUrl(url);
                
                // Clear previous QR code
                document.getElementById('qrcode').innerHTML = '';
                
                // Generate QR code using QRCodeJS
                const qrcode = new QRCode(document.getElementById('qrcode'), {
                    text: processedUrl,
                    width: 300,
                    height: 300,
                    colorDark: '#000000',
                    colorLight: '#FFFFFF',
                    correctLevel: QRCode.CorrectLevel.M
                });
                
                // Wait a moment for the QR code to render, then get the canvas
                setTimeout(() => {
                    const canvas = document.getElementById('qrcode').querySelector('canvas');
                    if (canvas) {
                        currentQRDataURL = canvas.toDataURL();
                        document.getElementById('qr-container').style.display = 'block';
                        showSuccess('QR code generated successfully!');
                    } else {
                        showError('Error generating QR code. Please try again.');
                    }
                }, 100);
                
            } catch (error) {
                showError('Error generating QR code. Please try again.');
                console.error('QR generation error:', error);
            }
        }

        // Download QR Code
        function downloadQR() {
            if (!currentQRDataURL) {
                showError('No QR code to download');
                return;
            }
            
            const link = document.createElement('a');
            link.download = 'google-drive-qr.png';
            link.href = currentQRDataURL;
            link.click();
        }

        // Allow Enter key to generate QR
        document.getElementById('drive-url').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateQR();
            }
        });
    </script>
</body>
